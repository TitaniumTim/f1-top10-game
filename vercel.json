{
  "version": 2,
  "routes": [
    {
      "src": "/css/(.*)",
      "dest": "/css/$1",
      "headers": { "cache-control": "s-maxage=31536000, immutable" }
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1",
      "headers": { "cache-control": "s-maxage=31536000, immutable" }
    }
  ],
  "headers": [
    {
      "source": "/(.*).js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript" }
      ]
    },
    {
      "source": "/(.*).css",
      "headers": [
        { "key": "Content-Type", "value": "text/css" }
      ]
    }
  ]
}
